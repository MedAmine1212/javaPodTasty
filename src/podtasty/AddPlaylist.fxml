<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="bodybg" stylesheets="@../PlaylistStyles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="podtasty.AddPlaylistController">
   <children>
      <FlowPane AnchorPane.bottomAnchor="0.0">
         <children>
            <StackPane>
               <children>
                  <BorderPane prefHeight="400.0" prefWidth="600.0">
                     <top>
                        <Label id="title" fx:id="addPlaylistTtitle" alignment="CENTER" prefHeight="58.0" prefWidth="398.0" text="Add a new Playlist" BorderPane.alignment="CENTER">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </top>
                     <center>
                        <VBox alignment="CENTER" fillWidth="false" maxWidth="442.0" prefHeight="298.0" prefWidth="389.0">
                           <children>
                              <Label id="label" fx:id="addPlaylistNameLabel" alignment="CENTER" text="New playlist name" textFill="#faf8f8" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets top="-150.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="PlaylistNameField" alignment="CENTER" minWidth="-Infinity" prefHeight="26.0" prefWidth="289.0" scaleShape="false" VBox.vgrow="NEVER">
                                 <VBox.margin>
                                    <Insets top="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <Label id="label" fx:id="addPlaylistDescriptionLabel" alignment="CENTER" contentDisplay="CENTER" text="The playlist Description" textFill="#faf8f8" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets top="15.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="PlaylistDescriptionField" alignment="CENTER" minWidth="-Infinity" prefHeight="26.0" prefWidth="292.0" scaleShape="false">
                                 <VBox.margin>
                                    <Insets top="15.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                           <effect>
                              <Glow />
                           </effect>
                        </VBox>
                     </center>
                     <bottom>
                        <HBox alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="btnaddPlaylist" mnemonicParsing="false" onAction="#AddPlaylistAction" text="Add" />
                              <Button fx:id="btnCancelAddPlaylist" mnemonicParsing="false" onAction="#CancelAddPlaylist" text="Cancel">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <BorderPane.margin>
                              <Insets bottom="5.0" />
                           </BorderPane.margin>
                        </HBox>
                     </bottom>
                  </BorderPane>
               </children>
            </StackPane>
         </children>
      </FlowPane>
   </children>
</AnchorPane>
